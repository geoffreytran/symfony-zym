{% extends "ZymUserBundle::layout.html.twig" %}

{% block title %}{{ 'Recover Account' | trans({}, 'FOSUserBundle') }}{% endblock %}

{% block content %}
    <div class="page-header">
        <h1>
            {{ 'Recover Account' | trans({}, 'FOSUserBundle') }}
            <small>{{ 'Reset your password.' | trans({}, 'ZymUserBundle') }}</small>
        </h1>
    </div>

    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
        {{ form_widget(form) }}

        <fieldset class="form-actions">
            <input type="submit" class="btn btn-primary" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
        </fieldset>
    </form>
{% endblock %}

{% block inlineScripts %}
    {{ parent() }}

    <script type="text/javascript">
        $(document).ready(function(){
            var password = $('#fos_user_resetting_form_plainPassword_first');
            password.focus();
        });
    </script>
{% endblock %}