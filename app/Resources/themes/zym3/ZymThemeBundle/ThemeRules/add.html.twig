{% extends "ZymThemeBundle::layout.html.twig" %}

{% block title %}{{ 'New Theme Rule' | trans({}, 'ZymThemeBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>{{ 'New Theme Rule' |trans({}, 'ZymThemeBundle') }}</h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymThemeBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_theme_theme_rules_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-file"></span> {{ 'Create' | trans({}, 'ZymThemeBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymThemeBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}