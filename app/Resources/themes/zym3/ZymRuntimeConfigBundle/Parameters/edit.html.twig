{% extends "ZymRuntimeConfigBundle::layout.html.twig" %}

{% block title %}{{ 'Edit Parameter' | trans({}, 'ZymRuntimeConfigBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Edit Parameter' | trans({}, 'ZymRuntimeConfigBundle') |e }}
                    <small>{{ parameter.name |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymRuntimeConfigBundle') }}
                    </a>
                </div>

                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\RuntimeConfigBundle\\Entity\\Parameter', 'identifier': parameter.objectIdentifier }) }}">
                        <span class="glyphicon glyphicon-lock"></span>
                        {{ 'Permissions' | trans({}, 'ZymRuntimeConfigBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form action="{{ path('zym_runtime_config_parameters_edit', { 'name' : parameter.name }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> {{ 'Save changes' | trans({}, 'ZymRuntimeConfigBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymRuntimeConfigBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}