{% extends "ZymMediaBundle::layout.html.twig" %}

{% block title %}{{ 'Edit Media' | trans({}, 'ZymMediaBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Edit Media' | trans({}, 'ZymMediaBundle') |e }}
                    <small>{{ media.name | trans({}, 'ZymMediaBundle') |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymMediaBundle') }}
                    </a>
                </div>

                <div class="btn-group">
                    <a class="btn btn-default navbar-btn"
                       href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\MediaBundle\\Entity\\Media', 'identifier': media.id }) }}">
                        <span class="glyphicon glyphicon-lock"></span>
                        {{ 'Permissions' | trans({}, 'ZymMediaBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="thumbnail">
                {{ media(media) }}
            </div>
        </div>

        <div class="col-md-6">
            <form action="{{ path('zym_media_edit', { 'id': media.id }) }}" method="post" {{ form_enctype(form) }}>
                {{ form_rest(form) }}

                <fieldset class="form-actions">
                    <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> {{ 'Save changes' | trans({}, 'ZymMediaBundle') }}</button>
                    <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMediaBundle') }}</button>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock content %}