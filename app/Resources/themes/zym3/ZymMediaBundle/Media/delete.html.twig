{% extends "ZymMediaBundle::layout.html.twig" %}

{% block title %}{{ 'Delete Media' | trans({}, 'ZymMediaBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>{{ 'Confirm Deletion' | trans({}, 'ZymMediaBundle') }}</h1>
            </div>
        </div>
    </div>

    <p>
        You are about to delete media <strong>"{{ media.name |e }}"</strong>.
        This action cannot be undone.<br />
        <strong>Are you sure you want to proceed?</strong>
    </p>

    <form action="{{ path('zym_media_delete', { 'id': media.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <input class="btn btn-danger" type="submit" value="{{ 'Delete' | trans({}, 'ZymMediaBundle') }}" />
            <a class="btn btn-default" href="{{ path('zym_media') }}">{{ 'Cancel' | trans({}, 'ZymMediaBundle') }}</a>
        </fieldset>
    </form>
{% endblock %}