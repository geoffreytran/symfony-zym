{% extends "ZymMenuBundle::layout.html.twig" %}

{% block title %}{{ 'Add a Menu' | trans({}, 'ZymMenuBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'New Menu' | trans({}, 'ZymMenuBundle') }}
                    <small>{{ 'Create a new menu' | trans({}, 'ZymMenuBundle') }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymMenuBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <p>
        {% trans from 'ZymMenuBundle' %}Menus are a collection of links (menu items) used to navigate a website.{% endtrans %}
    </p>

    <form class="form-horizontal" action="{{ path('zym_menus_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}
    
        <fieldset class="form-actions">
            glyphicon-file"></span> {{ 'Create' | trans({}, 'ZymMenuBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}