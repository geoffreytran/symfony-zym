{% extends "ZymMenuBundle::layout.html.twig" %}

{% block title %}{{ 'Edit Menu' | trans({}, 'ZymMenuBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">    
            <div class="page-header">
                <h1>
                    {{ 'Edit Menu' | trans({}, 'ZymMenuBundle') |e }}
                    <small>{{ menu.label | trans({}, 'ZymMenuBundle') |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymMenuBundle') }}
                    </a>
                </div>

                <div class="btn-group">
                    <a class="btn btn-default navbar-btn"
                       href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\MenuBundle\\Entity\\Menu', 'identifier': menu.name }) }}">
                        <span class="glyphicon glyphicon-lock"></span>
                        {{ 'Permissions' | trans({}, 'ZymMenuBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_menus_edit', { 'id': menu.name }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-floppy-disk"></span> {{ 'Save changes' | trans({}, 'ZymMenuBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</button>
        </fieldset>
    </form>
{% endblock %}