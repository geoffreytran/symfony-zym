{% extends "ZymMenuBundle::layout.html.twig" %}

{% block title %}{{ 'Add a Menu Item' | trans({}, 'ZymMenuBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Add Menu Item' |trans({}, 'ZymMenuBundle') }}
                    <small>{{ menu.label |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group navbar-btn">
                    <a class="btn btn-default" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymMenuBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    {% if form is defined %}
    <form class="form-horizontal" action="{{ path('zym_menus_item_add', { 'id': menu.name, 'type': type }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}
        {{ form_row(form.parent, { 'empty_value': '---' }) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Create' | trans({}, 'ZymMenuBundle') }}</button>
            <button class="btn btn-default" onclick="history.go(-2);">{{ 'Cancel' | trans({}, 'ZymMenuBundle') }}</button>
        </fieldset>
    </form>
    {% else %}
    <ul>
        <li>
            <a href="{{ path('zym_menus_item_add', { 'id': menu.name, 'type': 'section'}) }}">
                {{ 'Section Menu Item' | trans({}, 'ZymMenuBundle') }}
            </a>
        </li>
        <li>
            <a href="{{ path('zym_menus_item_add', { 'id': menu.name, 'type': 'routed'}) }}">
                {{ 'Routed Menu Item' | trans({}, 'ZymMenuBundle') }}
            </a>
        </li>
        <li>
            <a href="{{ path('zym_menus_item_add', { 'id': menu.name, 'type': 'static'}) }}">
                {{ 'Static Menu Item' | trans({}, 'ZymMenuBundle') }}
            </a>
        </li>
    </ul>
    {% endif %}
{% endblock content %}