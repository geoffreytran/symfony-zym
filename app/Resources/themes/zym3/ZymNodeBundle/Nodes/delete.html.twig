{% extends "ZymNodeBundle::layout.html.twig" %}

{% block title %}{{ 'Delete Node' | trans({}, 'ZymNodeBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Confirm Deletion' |trans({}, 'ZymNodeBundle') }}
                    <small>{{ node.title |trans({}, 'ZymNodeBundle') }}</small>
                </h1>
            </div>
        </div>
    </div>
    
    <p>
        You are about to delete <strong>"{{ node.title |e }}"</strong>.
        This action cannot be undone.<br />
        <strong>Are you sure you want to proceed?</strong>
    </p>

    <form action="{{ path('zym_node_nodes_delete', { 'id' : node.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}
        
        <fieldset class="form-actions">
            <button class="btn btn-danger" type="submit">{{ 'Confirm Deletion' | trans({}, 'ZymNodeBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymNodeBundle') }}</button>
        </fieldset>
    </form>
{% endblock %}