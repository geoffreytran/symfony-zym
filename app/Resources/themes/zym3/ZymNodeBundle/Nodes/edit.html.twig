{% extends "ZymNodeBundle::layout.html.twig" %}

{% block title %}{{ 'Edit "%title%"' | trans({ '%title%': node.title }, 'ZymNodeBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Edit %nodeType%' | trans({ '%nodeType%': node.nodeType.name }, 'ZymNodeBundle') }}
                    <small>{{ node.title |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="{{ path('zym_node_node_types') }}">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Content' | trans({}, 'ZymNodeBundle') }}
                    </a>
                </div>

                <div class="btn-group">
                    <a class="btn btn-default navbar-btn"
                       href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\NodeBundle\\Entity\\Node', 'identifier': node.id }) }}">
                        <span class="glyphicon glyphicon-lock"></span>
                        {{ 'Permissions' | trans({}, 'ZymNodeBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_nodes_edit', { 'id' : node.id }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymNodeBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymNodeBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}