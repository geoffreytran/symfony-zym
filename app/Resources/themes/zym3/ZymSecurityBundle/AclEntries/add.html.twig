{% extends "ZymSecurityBundle::layout.html.twig" %}

{% block title %}{{ 'Add ACL Entry' | trans({ }, 'ZymSecurityBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Add ACL Entry' | trans({}, 'ZymSecurityBundle') }}
                    <small>{{ aclClass.classType |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn btn-default" href="javascript: history.back();">
                <span class="glyphicon glyphicon-arrow-left"></span>
                {{ 'Back' | trans({}, 'ZymSecurityBundle') }}
            </a>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_security_acl_entries_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-file"></span> {{ 'Create' | trans({}, 'ZymSecurityBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymSecurityBundle') }}</button>
        </fieldset>
    </form>
{% endblock %}