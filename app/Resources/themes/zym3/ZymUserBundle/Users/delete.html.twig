{% extends "ZymUserBundle::layout.html.twig" %}

{% block title %}{{ 'Delete User' | trans({}, 'ZymUserBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Users' | trans({}, 'ZymUserBundle') }}
                    <small>{{ 'Manage users' | trans({}, 'ZymUserBundle') }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="panel panel-danger">
        <div class="panel-heading">
            <h1 class="panel-title">
                {{ 'Confirm Deletion' |trans({}, 'ZymUserBundle') }}
                <small>{{ user.username | e }}</small>
            </h1>
        </div>
            
        <form action="{{ path('zym_user_users_delete', { 'id' : user.id }) }}" method="post" {{ form_enctype(form) }}>
            <div class="panel-body">
                <p>
                    You are about to delete <strong>"{{ user.username |e }}"</strong>.
                    This action cannot be undone.<br />
                    <strong>Are you sure you want to proceed?</strong>
                </p>

                {{ form_rest(form) }}
            </div>
            
            <div class="panel-footer">
                <input class="btn btn-danger" type="submit" value="{{ 'Delete' | trans({}, 'ZymUserBundle') }}" />
                <a class="btn btn-default" href="{{ path('zym_user_users') }}" class="button">{{ 'Cancel' | trans({}, 'ZymUserBundle') }}</a>
            </div>
        </form>    
    </div>
{% endblock %}