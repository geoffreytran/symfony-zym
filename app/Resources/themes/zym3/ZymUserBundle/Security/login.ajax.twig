<div class="modal-dialog" data-ng-controller="LoginCtrl" data-ng-class="{'animated shake': error, 'animated fadeIn': error == null && !loading, 'animated bounceOut': success}"  data-ng-cloak>
    <div class="modal-content">
        <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" data-ng-submit="login($event)">
            <div class="modal" style="position: static; margin: 0 auto; display: block;">
                <div class="modal-header">
                    <h1 class="modal-title">
                        {{ 'Login' | trans({}, 'FOSUserBundle') }}
                        <small>{{ 'Provide your credentials to sign in.' | trans({}, 'ZymUserBundle') }}</small>
                    </h1>
                </div>

                <div class="modal-body">
                    {% if error %}
                        <div class="alert alert-danger alert-dismissable" data-ng-class="{'animated fadeIn': error}">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span class="glyphicon glyphicon-minus-sign"></span>
                            {{ error }}
                        </div>
                    {% endif %}

                    <div class="alert alert-danger alert-dismissable" data-ng-if="error" data-ng-class="{'animated fadeIn': error}">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <span class="glyphicon glyphicon-minus-sign"></span>
                        {% verbatim %}{{ error }}{% endverbatim %}
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>

                        <div class="col-md-9">
                            <input class="form-control" type="text" id="username" name="_username" data-ng-model="username" value="{{ last_username }}" required autofocus />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>

                        <div class="col-md-9">
                            <input class="form-control" type="password" id="password" name="_password" data-ng-model="password" />
                        </div>
                    </div>

                    <div class="checkbox">
                        <div class="col-md-9 col-md-offset-3">
                            <label class="control-label" for="remember_me">
                                <input type="checkbox" id="remember_me" name="_remember_me" data-ng-model="rememberMe" value="on" />
                                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <a class="reset-request btn btn-link btn-block visible-xs" href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot your username or password?' |trans({}, 'FOSUserBundle') }}</a>
                    <a class="reset-request btn btn-link pull-left hidden-xs" href="{{ path('fos_user_resetting_request') }}">{{ 'Forgot your username or password?' |trans({}, 'FOSUserBundle') }}</a>

                    <button class="btn btn-primary" type="submit" id="_submit" name="_submit" data-ng-disabled="loading">
                        <span class="activity" data-ng-if="loading"></span>
                        {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>