{% extends "ZymRouterBundle::layout.html.twig" %}

{% block title %}{{ 'Edit Route' | trans({}, 'ZymRouterBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'Edit Route' | trans({}, 'ZymRouterBundle') |e }}
                    <small>{{ route.name |e }}</small>
                </h1>
            </div>
        </div>
    </div>

    <div class="navbar navbar-default">
        <div class="navbar-collapse">
            <div class="btn-toolbar">
                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="javascript: history.back();">
                        <span class="glyphicon glyphicon-arrow-left"></span>
                        {{ 'Back' | trans({}, 'ZymRouterBundle') }}
                    </a>
                </div>

                <div class="btn-group">
                    <a class="btn btn-default navbar-btn" href="{{ path('zym_security_acl_object_aces', { 'type': 'Zym\\Bundle\\RouterBundle\\Entity\\Route', 'identifier': route.objectIdentifier }) }}">
                        <span class="glyphicon glyphicon-lock"></span>
                        {{ 'Permissions' | trans({}, 'ZymRouterBundle') }}
                    </a>
                </div>
            </div>
        </div>
    </div>

    <form action="{{ path('zym_router_routes_edit', { 'name' : route.name }) }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit">{{ 'Save changes' | trans({}, 'ZymRouterBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymRouterBundle') }}</button>
        </fieldset>
    </form>
{% endblock content %}