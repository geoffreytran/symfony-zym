{% extends "ZymRouterBundle::layout.html.twig" %}

{% block title %}{{ 'Add a Route' | trans({}, 'ZymRouterBundle') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h1>
                    {{ 'New Route' | trans({}, 'ZymRouterBundle') }}
                    <small>{{ 'Create a new route' | trans({}, 'ZymRouterBundle') }}</small>
                </h1>
            </div>
        </div>
    </div>

    <form class="form-horizontal" action="{{ path('zym_router_routes_add') }}" method="post" {{ form_enctype(form) }}>
        {{ form_rest(form) }}

        <fieldset class="form-actions">
            <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-file"></span> {{ 'Create' | trans({}, 'ZymRouterBundle') }}</button>
            <button class="btn btn-default" type="button" onclick="history.back();">{{ 'Cancel' | trans({}, 'ZymRouterBundle') }}</button>
        </fieldset>
    </form>
{% endblock %}